" Enable syntax highlighting
syntax enable

" Auto-indent new lines
set autoindent

" Number of spaces that a <Tab> in the file counts for
set tabstop=8

" Number of spaces per Tab
set softtabstop=4

" Number of auto-indent spaces
set shiftwidth=4

" Convert tab to space
set expandtab
set smarttab

" Show line number
set number

" Show row and column information
set ruler

" Spell checking
set spell

" No beeping
set visualbell

" Beep/Flash screen on errors
set errorbells

" Hight-light all search results
set hlsearch

" Set history to 100, by default Vim saves 8 last commands
set history=100

" Color
colorscheme desert

